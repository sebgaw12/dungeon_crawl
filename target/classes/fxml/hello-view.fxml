<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0"
      prefWidth="800.0" spacing="20.0" styleClass="page" stylesheets="@WelcomingPage.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.codecool.dungeoncrawl.fxmlController.WelcomingStageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome in Dungeon Crawler" textFill="WHITE">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Button contentDisplay="TOP" onAction="#startNewGame" prefHeight="25.0" prefWidth="100.0" text="New Game"
            textAlignment="CENTER">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button onAction="#loadGame" layoutX="384.0" layoutY="316.0" prefHeight="25.0" prefWidth="100.0" text="Load Game">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button onAction="#exitGame" prefHeight="25.0" prefWidth="100.0" text="Exit Game">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
</VBox>
